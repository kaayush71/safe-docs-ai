{
    "manifest_version": 3,
    "name": "AI Redactor",
    "version": "1.0",
    "description": "Redacts confidential information from Google Docs.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://docs.google.com/document/*"],
        "js": ["content.js"]
      }
    ]
  }